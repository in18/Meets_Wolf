@model HicsMVC.Models.GroupSetupModel
@{
    ViewBag.Title = "Group Setup";
    Layout = "~/Views/Shared/MicronLayout.cshtml";
}

<div class="leftpadding">

    @*Überschrift*@
    <div style="width:100%;">
        <div class="left">
            <h2>Group Setup</h2>
        </div>

        <div class="middle">
            <h2></h2>
        </div>
        <div class="right">
            <div class="logout">
                <a></a>
            </div>
        </div>
    </div>

    <br style="clear:both;" />

    @*Lampe Hinzufügen*@
    @using (Html.BeginForm("AddGroup", "GroupSetupController"))
    {
        <table class="toptext">
            <tr>
                <td class="addpadding" colspan="2">Groupname</td>
            </tr>
            <tr>
                <td><input class="boxdesign" type="text" name="groupname" placeholder="Groupname" /></td>
                <td><input class="boxdesign" type="submit" name="addgroup" value="Add Group" /></td>
            </tr>
        </table>
    }

    @*Ausgabeliste*@
    <div class="listframe">
        <table>
            <tr>
                <th align="left" colspan="2">@</th>
            </tr>
            <tr class="boxrow">
                <td class="listframepadding">DB-Groupname</td>
                <td><a href="" class="deletedesign">Delete</a></td>
            </tr>
        </table>
    </div>
</div>