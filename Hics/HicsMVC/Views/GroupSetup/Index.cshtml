@model HicsMVC.Models.GroupSetupModel
@{
    ViewBag.Title = "Group Setup";
    Layout = "~/Views/Shared/MicronLayout.cshtml";
}

<div class="leftpadding">

    @*Überschrift*@
    <div style="width:100%;">
        <div class="left">
            <h2>Group Setup</h2>
        </div>

        <div class="middle">
            <h2></h2>
        </div>
        <div class="right">
            <a href="~/Logout/Logout">
                <div class="logout"></div>
            </a>
        </div>
    </div>
        
    <br style="clear:both;" />

    @*Lampe Hinzufügen*@
    @using (Html.BeginForm("AddGroup", "GroupSetupController"))
    {
        <table class="toptext">
            <tr>
                <td class="addpadding" colspan="2">Groupname</td>
            </tr>
            <tr>
                <td> @Html.TextBoxFor(model => model.Groupname, new { @class = "boxdesign", @placeholder = "Groupname" } )</td>
                <td><input class="boxdesign" type="submit" name="addgroup" value="Add Group" /></td>
            </tr>
            <tr>
                <td>@Html.ValidationMessageFor(model => model.Groupname, String.Empty, new { @style = "color:red;font-weight:bold;" })</td>
            </tr>
        </table>
    }

    @*Ausgabeliste*@
    <div class="listframe">
        <table>
            <tr>
                <th align="left" colspan="2">Groupname</th>
            </tr>
            @*@for (int i = 0; i < Model.Grouplist.Count; i++)
            {
            <tr class="boxrow">
                <td class="listframepadding">@Model.Grouplist[i].roomgroupname</td>
                <td> @Html.ActionLink("Delete", "DeleteUser", new { @id = Model.Grouplist[i].id, @class = "deletedesign"})
            </tr>
            }*@
        </table>
    </div>
</div>

<div class="left"><h2></h2></div>
<div class="middle"><h2></h2></div>
<div class="right">
    <div style="width:100%;">
        <a href="~/Admin/Index"><div class="home"></div></a>
    </div>
</div>