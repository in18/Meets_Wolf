@model HicsMVC.Models.AdminResetPasswordModel

@{
    ViewBag.Title = "AdminController/ResetPassword";
    Layout = "~/Views/Shared/MicronLayout.cshtml";
}

@* = @using (Html.BeginForm("ChangePassword"(=ActionName), "User"(=ControllerName), FormMethod.Post)) *@
@using (Html.BeginForm())
{
    <div style="width:100%;">
        <div class="left">
            <h2>Reset Password</h2>
        </div>
        <div class="middle">
            <h2></h2>
        </div>
        <div class="right">
            <a href="~/Login/Login">
                <div class="logout"></div>
            </a>
        </div>
    </div>

    @*Löscht alle Floats*@
    <br style="clear:both;" />

    <div class="leftpadding">        
        <div>
            <p class="paragraphtext">New Password:</p>
            <input class="divinputpadding" type="password" name="NewPassword" placeholder="Password456" required />
        </div>
        <div>
            <p class="paragraphtext">Retype Password:</p>
            <input class="divinputpadding" type="password" name="RetypePassword" placeholder="Password456" required />
        </div>
        <div class="bottomatbutton paddingtop">
            <input class="divinputpadding" type="submit" name="SaveButton" value="Save" />@* Submit-Button für Change Password *@
        </div>
    </div>
    <div style="width:100%;">
        <div class="left">
            <h2></h2>
        </div>

        <div class="middle">
            <h2></h2>
        </div>
        <div class="right">
            <a href="~/Admin/Index">
                <div class="home"></div>
            </a>
        </div>
    </div>
}



