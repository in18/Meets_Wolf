@*@model HicsMVC.Models.UserLampControl*@
@model HicsBL.fn_show_lamp_control_Result

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MicronLayout.cshtml";
}


<div>
    <div>
        <a href="~/Admin/Index"><div class="homepfeifer2"></div></a>

        <a href="~/Logout/Logout"><div class="logoutpfeifer2"></div></a>
    </div>

    <div align="center" class="middlepfeifer">
        <h2>Lamp Setting</h2>
    </div>
</div> 

<br style="clear:both;" />

<div align="center" class="mainframe">
    @using (Html.BeginForm("Edit", "UserLampControl"))
    {

        <div class="lampcontainer">

            <table>
                <tr>
                    <th class="lampcontr">ID</th>
                    <th class="lampcontr">Adress</th>
                    <th class="lampcontr">Groupname</th>
                    <th class="lampcontr">Lampname</th>
                    <th class="lampcontr">Status</th>
                    <th class="lampcontr">Brigtness</th>
                </tr>
                <tr>
                    <td>
                        @Model.lamp_id
                        @Html.HiddenFor(x => x.lamp_id)
                    </td>
                    <td>
                        @Model.address
                        @Html.HiddenFor(x => x.address)
                    </td>

                    <td>
                        @Model.groupname
                        @Html.HiddenFor(x => x.groupname)
                    </td>


                    <td>
                        @Model.lampname
                        @Html.HiddenFor(x => x.lampname)
                    </td>


                    <td>
                        @{ bool status = (bool)Model.status;}
                        @Html.CheckBoxFor(x => status)
                    </td>
                    <td>
                        <input type="range" value="@Model.brightness" min="0" max="255" name="wert" onchange="updateTextInput(this.value);" />
                        @Html.TextBoxFor(x => Model.brightness)
                    </td>
                </tr>
                <tr>
                    <td colspan="5">
                        <input type="submit" />
                    </td>
                </tr>
            </table>
        </div>                            }
</div>

<script type="text/javascript">
    function updateTextInput(val) {
        document.getElementById('brightness').value = val;
    }
</script>