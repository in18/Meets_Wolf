
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MicronLayout.cshtml";
}

<div style="width:100%;">
    <div class="left">
        <h2>Add User</h2>
    </div>

    <div class="middle">
        <h2>Admin Name</h2>
    </div>
    <div class="right">
        <a href="~/Login/Login">
            <div class="logout"></div>
        </a>
    </div>
</div>

<br style="clear:both;">

<div style="width:100%;">
    <div class="left">
        <div>
            <br />
            <p class="paragraphtext">Username:</p>
            <input class="divinputpadding" type="password" name="RecentPassword" placeholder="z.B. Dagobert" required />
        </div>
        <div>
            <p class="paragraphtext">Password:</p>
            <input class="divinputpadding" type="password" name="NewPassword" placeholder="z.B. ********" required />
        </div>
        <div>
            <p class="paragraphtext">Repeat Password:</p>
            <input class="divinputpadding" type="password" name="RetypePassword" placeholder="z.B. ********" required />
        </div>
        <div class="bottomatbutton paddingtop">
            <input class="divinputpadding" type="submit" name="SaveButton" value="Add" />@* Add Button für User Add *@
        </div>
    </div>
</div>