@model HicsMVC.BundleConfig

@{
    ViewBag.Title = "Admin Registration";
    Layout = "~/Views/Shared/MicronLayout.cshtml";
}

<style>
    .leftpadding{padding-left:28px;}
    .toptext{padding-left:10px;}
    .paragraphtext{font-family:'Segoe UI';}
    .anchornounderline{text-decoration:none;}
    .bottomatbutton{padding-bottom:38px;}
    .divinputpadding{padding:10px;border:solid 2px #054588;border-radius:5px;}
    .divinputpadding:hover{box-shadow:0 0 2px 2px #054588;}
    .paddingtop{padding-top:40px;}
    .divinputpadding:focus{box-shadow:0 0 2px 2px #054588;}
</style>

<div class="leftpadding">
    <h2 class="toptext">Admin Registration</h2>
    <form action="#" method="post">
        <div>
            <p class="paragraphtext">Input Superadmin:</p>
            <input class="divinputpadding" type="text" name="superadmin" placeholder="adminname" required />
        </div>
        <div>
            <p class="paragraphtext">Input Password:</p>
            <input class="divinputpadding" type="password" name="password" placeholder="password" required />
        </div>
        <div>
            <p class="paragraphtext">Retype Password:</p>
            <input class="divinputpadding" type="password" name="retypepassword" placeholder="retype password" required />
        </div>
        <div class="bottomatbutton paddingtop">
            <a href="#" class="anchornounderline"><input class="divinputpadding" type="submit" name="submitbutton" value="Add Superadmin" /></a>
        </div>
    </form>
</div>
  

